<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_layout2"
    android:paddingLeft="1dp"
    android:paddingTop="1dp"
    android:paddingRight="1dp">

    <TextView
        android:id="@+id/titleTextViewOfWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bodyTextViewOfWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextViewOfWidget"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:maxLines="8"
        android:text="TextView"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/dateTextViewOfWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bodyTextViewOfWidget"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="right"
        android:text="TextView"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageViewOfWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTextViewOfWidget"
        android:layout_marginBottom="1dp"
        android:maxHeight="150dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>